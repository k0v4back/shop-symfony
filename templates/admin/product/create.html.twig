{% extends 'admin/main-page.html.twig' %}

{% block body %}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="{{ path('main_page') }}">Главная </a>
    </li>
    <li class="breadcrumb-item">
        <a href="{{ path('all_users') }}">Пользователи</a>
    </li>
    <li class="breadcrumb-item active">Создать</li>
</ol>

    {{ form_start(form) }}

    {{ form_row(form.title) }}
    {{ form_row(form.description) }}
    {{ form_row(form.price) }}

    <div class="col-sm-8 col-sm-offset-2" id="exp_list" data-prototype="{{ form_widget(form.modification.vars.prototype)|e('html_attr') }}">
        <div class="card mb-3">
            <div class="card-body" style="background-color: #f0f0f0">
                {% for mod in form.modification %}
                    <div class="panel panel-warning">
                        <div class="panel-heading">
                            <strong>{{ form_row(mod.title) }}</strong>
                        </div>
                        <div class="panel-body">
                            {{ form_row(mod.text) }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}