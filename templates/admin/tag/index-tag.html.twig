{% extends 'admin/main-page.html.twig' %}

{% block body %}

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('main_page') }}">Главная</a>
        </li>
        <li class="breadcrumb-item active">Метки</li>
    </ol>
    <a href="{{ path('create_tag') }}" class="btn btn-success">Создать новую метку</a>

    {% for message in app.flashes('success') %}
        <br>
        <br>
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('primary') %}
        <br>
        <br>
        <div class="alert alert-primary">
            {{ message }}
        </div>
    {% endfor %}

    <br>
    <br>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Название</th>
            <th scope="col">Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
        <tr>
            <td>{{ tag.title }}</td>
            <td>
                <a href="{{ path('view_tag', {'id': tag.id}) }}"><button class="btn btn-info btn-sm"><i class="fas fa-eye"></i></button></a>
                <a href="{{ path('update_tag', {'id': tag.id}) }}"><button class="btn btn-success btn-sm"><i class="fas fa-pen"></i></button></a>
                <a href="{{ path('delete_tag', {'id': tag.id}) }}"><button class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></button></a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}