{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-3">
        <div class="row">
            <dl class="row">
                <dt class="col-sm-3">Имя</dt>
                <dd class="col-sm-9">{{ user.fullname }}</dd>

                <dt class="col-sm-3">Ник</dt>
                <dd class="col-sm-9">
                    <p>{{ user.username }}</p>
                </dd>
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">{{ user.email }}</dd>
                <dt class="col-sm-3">Дата регистриции</dt>
                <dd class="col-sm-9">{{ user.createdAt|date("m/d/Y") }}</dd>
            </dl>
        </div>


        <div class="card shopping-cart">
            <div class="card-body" id="divProduct">

                <!-- PRODUCT -->
                {% for item in items %}
                <div class="row mb-3">

                    <div class="col-12 col-sm-12 col-md-2 text-center">
                        <a href="{{ path('show_one_product', {'id':item.product.id}) }}">
                            <img class="img-responsive"
                                 src="{{ asset('upload/product/' ~ item.product.id|getPhoto(item.product.id)) }}"
                                 alt="prewiew" width="120" height="80">
                        </a>
                    </div>
                    <div class="col-12 text-sm-center col-sm-12 text-md-left col-md-6">
                        <h4 class="product-name">
                            <a href="{{ path('show_one_product', {'id':item.product.id}) }}" style="color: black;">
                                <b>
                                    {{ item.product.id|getProduct(item.product.id).title }}
                                </b>
                            </a>
                        </h4>
                        <h4>
                            <small>{{ item.product.id|getProduct(item.product.id).description|slice(0, 100) }}</small>
                        </h4>
                    </div>
                    <p>Трек: {{ item.id|trackNumber(item.id).track }}
                        <br>
                        Дата оформления закза: {{ item.id|trackNumber(item.id).createdAt|date("m/d/Y") }}
                    </p>
                    <p></p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    </div>
    </div>

{% endblock %}