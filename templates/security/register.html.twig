{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Регистрация</h5>
                        {{ form_start(form) }}

                        <div class="my-custom-class-for-errors">
                            {{ form_errors(form) }}
                        </div>

                        {{ form_row(form.fullname, {'label': 'Имя'}) }}

                        {{ form_row(form.email, {'label': 'Почта'}) }}

                        {{ form_row(form.password, {'label': 'Пароль'}) }}

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}